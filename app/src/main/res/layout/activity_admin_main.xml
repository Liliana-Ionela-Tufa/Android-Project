<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/baseline_logout_24"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="350dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Upload attraction"
        android:textSize="18dp"
        android:id="@+id/uploadAttraction"
        android:textAllCaps="false"
        android:layout_marginTop="200dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Upload attraction manually"
        android:textSize="18dp"
        android:id="@+id/uploadManually"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        tools:ignore="DuplicateIds" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Update/delete attraction"
        android:textSize="18dp"
        android:id="@+id/updateDelete"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Delete review"
        android:textSize="18dp"
        android:id="@+id/deleteReview"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Delete user"
        android:textSize="18dp"
        android:id="@+id/deleteUser"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

