<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FavoritesDetails">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameOb"
        android:text="Name"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/darkblue"/>

    <ImageView
        android:id="@+id/imageOb"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/uploadphoto" />

    <TextView
        android:id="@+id/descOb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Description"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cityOb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="City"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Country"
        android:layout_gravity="center"
        android:id="@+id/countryOb"
        android:textSize="18sp"
        android:textColor="@color/darkblue"/>

    <!--    <Button-->
    <!--        android:id="@+id/seeLoc"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textSize="20sp"-->
    <!--        android:text="See location"-->
    <!--        android:layout_gravity="center"/>-->
    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Go back"
        android:layout_gravity="center"/>


</LinearLayout>